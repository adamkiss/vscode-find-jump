{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"outDir": "out",
		"suppressImplicitAnyIndexErrors": false,
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"es2018",
			"es2019"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
